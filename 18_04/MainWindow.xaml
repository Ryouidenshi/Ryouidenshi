        <Button Content="Relax, my boy" HorizontalAlignment="Left" Margin="114,128,0,0" VerticalAlignment="Top" Width="241" Click="PlayMusic" Height="53" FontFamily="Palace Script MT" FontSize="48" BorderBrush="#FF54574C" Foreground="#FF611B1B" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect Color="#FF897474" ShadowDepth="5"/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
