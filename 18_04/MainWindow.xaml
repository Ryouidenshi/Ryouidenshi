        <Button Content="Sorry za mat" HorizontalAlignment="Left" Margin="212,212,0,0" VerticalAlignment="Top" Width="142" Height="60" BorderBrush="White" Foreground="Black" FontSize="36" FontFamily="Kunstler Script" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FFBD154A" Offset="1"/>
